<script>
    function Delete(id) {
        var result = confirm("Are you sure want to delete?");
        if (result) {
            $.getJSON('/Finance/DeleteIncomeList/', { id: id }, function (data) {
                location.reload();
            });
        }
    }
    function Edit(id) {
        $.ajax({
            cache: false,
            type: 'POST',
            url: '/Finance/EditIncomeList',
            data: { id: id },
            success: function (data) {
                $('#editpartial').html('');
                $('#editpartial').html(data);
                $('#editpartial1').trigger('click');
            }
        });
    }
</script>



