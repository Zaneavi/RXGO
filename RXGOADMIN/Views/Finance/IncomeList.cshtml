@model RXGOADMIN.Models.IncomeList
@{
    ViewBag.Title = "IncomeList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="page-breadcrumb">
    <div class="row">
        <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">
                Income List
            </h4>
            <div class="ml-auto text-right">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Admin">Home</a></li>
                        <li class="breadcrumb-item">
                            <a href="javascript:(void);">
                                Income List
                            </a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            List
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    @if (TempData["MSG"] != null)
                    {
                        <div class="alert alert-info alert-dismissable">
                            <button type="button" data-dismiss="alert" aria-hidden="true" class="close">×</button>
                            <strong>@TempData["MSG"]</strong>
                        </div>
                    }
                    <button type="button" class="btn btn-success btn-lg" data-toggle="modal" data-target="#myModal">Add Income</button>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table id="zero_config" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Invoice No</th>
                                    <th>Date</th>
                                    <th>Description</th>
                                    <th>HeadName</th>
                                    <th>Amount</th>
                                    <th>Edit</th>
                                    <th>Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.CategoryList != null)
                                {
                                    foreach (var i in ViewBag.CategoryList)
                                    {
                                        <tr>
                                            <td>@i.Name</td>
                                            <td>@i.InvoiceNo</td>
                                            <td>@i.Date</td>
                                            <td>@i.Description</td>
                                            <td>@i.HeadName</td>
                                            <td>@i.Amount</td>
                                            @*@if (i.IsActive == "True")
                                                {
                                                    <td><a href="javascript:void(0)" onclick="ChngStatus('@i.Id','@i.IsActive')" class="btn btn-success btn-xs">ACTIVE</a></td>
                                                }
                                                else
                                                {
                                                    <td><a href="javascript:void(0)" onclick="ChngStatus('@i.Id','@i.IsActive')" class="btn btn-danger btn-xs">INACTIVE</a></td>
                                                }*@
                                            <td><a href="javascript:void(0)" onclick="Edit('@i.Id')">Edit</a></td>
                                            <td>
                                                <a href="javascript:void(0)" onclick="Delete('@i.Id')" class="btn btn-danger btn-xs">
                                                    Delete
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Income</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <div class="card">
                    @using (Html.BeginForm("IncomeList", "Finance", FormMethod.Post, new { @class = "form-sample", enctype = "multipart/form-data" }))
                    {
                        <div class="card-body">
                            <div class="row">
                                @Html.HiddenFor(model => model.Id)

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>
                                            Income Head *
                                        </label>
                                        <div class="input-group">
                                            @Html.DropDownListFor(model => model.HeadId, ViewBag.Categoryinventory as SelectList, new { @class = "form-control req", @required = "required" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>
                                            Name
                                        </label>
                                        <div class="input-group">
                                            @Html.TextBoxFor(model => model.Name, new { @required = "required", @class = "form-control", @type = "text", @maxlength = "100" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>
                                            Invoice No
                                        </label>
                                        <div class="input-group">
                                            @Html.TextBoxFor(model => model.InvoiceNo, new { @required = "required", @class = "form-control", @type = "text", @maxlength = "100" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>
                                            Date
                                        </label>
                                        <div class="input-group">
                                            @Html.TextBoxFor(model => model.Date, new { @class = "form-control",  @readonly = "readonly", @Value = @DateTime.Now.ToString("yyyy-MM-dd") })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>
                                            Amount
                                        </label>
                                        <div class="input-group">
                                            @Html.TextBoxFor(model => model.Amount, new { @class = "form-control", @type = "text", @maxlength = "100" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>
                                            Attachment
                                        </label>
                                        <div class="input-group">
                                            @Html.TextBoxFor(model => model.Attachment, new { @class = "dropify", @type = "file" })
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>
                                            Description
                                        </label>
                                        <div class="input-group">
                                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @type = "text", @maxlength = "100" })
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="border-top">
                            <div class="card-body">
                                <button type="submit" class="btn btn-success">Submit</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>

<div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="ModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="editpartial">

        </div>
    </div>
</div>

<a data-toggle="modal" data-target="#EditModal" id="editpartial1"></a>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

