        padding: 10px;
    }

    .timeline:before {
        content: '';
        position: absolute;
        top: 0;
        bottom: 0;
        width: 4px;
        background: #ddd;
        left: 31px;
        margin: 0;
        border-radius: 2px;
    }

    .timeline > li:after {
        clear: both;
    }

    .timeline > li:before, .timeline > li:after {
        content: " ";
